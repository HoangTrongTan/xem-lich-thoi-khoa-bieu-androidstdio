<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="40dp"
    android:layout_gravity="center"
    android:background="@drawable/white_corner_16dp"
    >
    <com.example.appstudent.customTextView.FFF_Tusj
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFF"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/bg_corner_xanhla"
        android:text="Nhập mã"
        />
    <EditText
        android:id="@+id/nhapmasv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corner_16dp_borrder_gray"
        android:hint="Nhập mã "
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/huybo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_corner_left_bottom"
            android:text="Hủy"
            android:textColor="#FFF"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/vaotrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_corner_nhapsv_bottom_right"
            android:text="Xác nhận"
            android:textColor="#FFF"
            android:layout_weight="1"
            />
    </LinearLayout>



</LinearLayout>