<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="40dp"
    android:layout_gravity="center"
    android:background="@drawable/corner_16dp_borrder_gray"
    >
    <com.example.appstudent.customTextView.FFF_Tusj
        android:id="@+id/tenmon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/top_left_right_yellow_16dp"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tietbatdau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcdef"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#2C9F30"
            />

        <TextView
            android:id="@+id/tietketthuc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcdef"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#2C9F30"
            />
        <TextView
            android:id="@+id/phong"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcdef"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#2C9F30"
            />
    </LinearLayout>

    <Button
        android:id="@+id/danhsachsinhvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:background="@drawable/bottom_left_right_16dp"
        android:text="Danh sách sinh viên"
        android:textColor="#FFF"
        />

</LinearLayout>